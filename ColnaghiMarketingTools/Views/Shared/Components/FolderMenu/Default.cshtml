@model IEnumerable<ColnaghiMarketingTools.Models.Pasta>

@foreach (var pasta in Model)
{
    <li class="sidebar-item">
        <a asp-controller="Home" asp-action="CampanhasPorPasta" asp-route-pastaId="@pasta.Id" class="sidebar-link">
            <span class="sidebar-icon"><i class="far fa-folder"></i></span>
            <span class="sidebar-label">@pasta.Nome</span>
        </a>
    </li>
} 